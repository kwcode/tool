<Window x:Class="PasswordGenerator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Password Generator" Height="330" Width="800">
    <Grid>
        <Label Content="32位" FontSize="20" HorizontalAlignment="Left" Margin="10,23,0,0" VerticalAlignment="Top"/>
        <TextBox HorizontalAlignment="Left" FontSize="20" Name="txtPassword" Height="34" Margin="68,25,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="700"/>

        <Label Content="48位" FontSize="20" HorizontalAlignment="Left" Margin="10,86,0,0" VerticalAlignment="Top"/>
        <TextBox HorizontalAlignment="Left" FontSize="20" x:Name="txt48Password" Height="34" Margin="68,86,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="700"/>


        <Label Content="64位" FontSize="20" HorizontalAlignment="Left" Margin="10,149,0,0" VerticalAlignment="Top"/>
        <TextBox HorizontalAlignment="Left" FontSize="20" Name="txt64Password" Height="62" Margin="68,149,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="700"/>

        <Button Content="生成" FontSize="20" Name="btnPG" HorizontalAlignment="Left" Margin="68,235,0,0" VerticalAlignment="Top" Width="410" Height="37" Click="btnPG_Click"/>

    </Grid>
</Window>
